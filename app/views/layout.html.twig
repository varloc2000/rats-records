<!DOCTYPE html>
<html>
<head>
    {% block meta %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Style-Type" content="text/css">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    {% endblock meta %}

    {% block title %}
        <title>{{ "Rats Records | %s"|format(page_title|default("Welcome")) }}</title>
    {% endblock title %}

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/app/public/css/style.css" />
    {% endblock stylesheets %}

    {% block javascripts_head %}{% endblock javascripts_head %}
</head>

<body>
    <div class="content" id="rr-container">
        {% block container %}{% endblock container %}
    </div>
    {% include('loading.html.twig') %}
</body>

{% block javascripts %}
    <!-- jQuery -->
    <script src="/app/public/components/jquery/jquery.min.js" type="text/javascript"></script>

    <!-- Project scripts -->
    <script src="/app/public/js/utils.js" type="text/javascript"></script>
    <script src="/app/public/js/script.js" type="text/javascript"></script>
    <script>
        $(function() {
            var contentLoader = new RR.contentLoader('/home_content');
            contentLoader.init();
        });
    </script>
{% endblock javascripts %}

{% block javascripts_analytics %}
    {% if local == false %}
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-40140733-1']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
    {% endif %}
{% endblock javascripts_analytics %}
</html>