{# 
    Alternative layout to use without preloader (loading.html.twig) screen
    Layout includes content template (index.html.twig) 
    and simulate document 'content_loaded' event to init js included in content template
#}
{% embed "__layout_skeleton.html.twig" %}
    {% block header_styles %}
        <link rel="stylesheet" type="text/css" href="/app/public/css/layout.min.css" />
    {% endblock header_styles %}

    {% block header_scripts %}
        <script src="/app/public/js/dist/layout.min.js" type="text/javascript"></script>
        <script>
            $(function() {
                var event = new Event('content_loaded');
                document.dispatchEvent(event);
            });
        </script>
    {% endblock header_scripts %}

    {% block content %}
        {%- include('index.html.twig') -%}
    {% endblock content %}
{% endembed %}
