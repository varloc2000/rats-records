{# 
    Alternative layout to use with preloader (loading.html.twig) screen
    Layout loads content template (index.html.twig) via ajax loader
    Then loader fire 'content_loaded' event to init js included in content template
#}
{% embed "__layout_skeleton.html.twig" %}
    {% block header_styles %}
        <link rel="stylesheet" type="text/css" href="/app/public/css/loading.min.css" />
        <link rel="stylesheet" type="text/css" href="/app/public/css/layout.min.css" />
    {% endblock header_styles %}

    {% block after_content %}
        {%- include('loading.html.twig') -%}
        <script src="/app/public/js/dist/layout.min.js" type="text/javascript"></script>
        <script>
            $(function() {
                var contentLoader = new RR.contentLoader('/home_content');
            });
        </script>
    {% endblock after_content %}
{% endembed %}
