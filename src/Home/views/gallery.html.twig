{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="/app/public/vendor/fotorama-4.4.9/fotorama.css" />
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="/app/public/vendor/fotorama-4.4.9/fotorama.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('#rr-gallery').fotorama();
        });
    </script>
{% endblock javascripts %}

{% block content %}
    <div class="gallery">
        <header>
            <h3 class="crimson">
            </h3>
        </header>
        <div class="content">
            <div id="rr-gallery"
                data-width="880"
                data-height="600"
                data-allowfullscreen="native"
                data-arrows="true"
                data-click="true"
                data-swipe="true"
                data-keyboard="true"
                data-nav="dots"
            >
                {% set gallery_image_pattern = 'app/public/images/gallery/' %}
                {% for number in range(1, 11) %}
                    <a href="{{ gallery_image_pattern ~ 'thumbs/rr-gallery-' ~ number }}.jpg"
                        data-thumb="{{ gallery_image_pattern ~ 'thumbs/rr-gallery-' ~ number }}.jpg"
                    >
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock content %}